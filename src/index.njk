    {% for movie in data.actionMovie %}
        <div id=action{{loop.index0}} class="hide" >
            <div class="img-card">
                <div classname="img">
                    <img src=https://image.tmdb.org/t/p/w500/{{movie.poster_path}} width=300px height=400px></img>
                </div>
                <h4>{{movie.title}}</h4>
            </div>
        </div>
    {% endfor %}

